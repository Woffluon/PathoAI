# PathoAI Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging (true/false)
LOG_JSON_FORMAT=false

# Log directory path (default: /var/log/pathoai, fallback: ./logs)
LOG_DIR=/var/log/pathoai

# Enable debug mode (true/false) - NEVER use in production!
DEBUG=false

# ============================================================================
# SENTRY ERROR TRACKING (Optional)
# ============================================================================
# Sentry DSN for error tracking
# Get your DSN from https://sentry.io/settings/projects/
# Leave empty to disable Sentry
SENTRY_DSN=

# Deployment environment name (development, staging, production)
SENTRY_ENVIRONMENT=production

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application port (default: 7860 for Docker, 8501 for local Streamlit)
PORT=7860

# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT_SECONDS=1800

# ============================================================================
# MEMORY MANAGEMENT
# ============================================================================
# Maximum memory usage percentage before triggering cleanup (0-100)
MAX_MEMORY_PERCENT=85

# Session memory limit in GB
MAX_SESSION_MEMORY_GB=2.0

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# Enable aggressive garbage collection (true/false)
AGGRESSIVE_GC=false

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Model directory path (default: ./models)
MODEL_DIR=./models

# Classification model path
CLS_MODEL_PATH=./models/effnetv2s_best.keras

# Segmentation model path
SEG_MODEL_PATH=./models/cia_net_final_sota.keras

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Maximum upload file size in bytes (default: 52428800 = 50 MB)
MAX_FILE_SIZE=52428800

# Maximum image pixels (default: 100000000 = 100 megapixels)
MAX_PIXELS=100000000

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://huggingface.co,https://*.hf.space,http://localhost:8501,http://localhost:7860

# ============================================================================
# MONITORING (Optional)
# ============================================================================
# Prometheus metrics server port (default: 9090)
METRICS_PORT=9090

# Enable Prometheus metrics (true/false)
ENABLE_METRICS=true

# ============================================================================
# DATABASE (Future Use - Currently Not Implemented)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/pathoai
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# EXTERNAL SERVICES (Future Use - Currently Not Implemented)
# ============================================================================
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=pathoai-storage

# ============================================================================
# NOTES
# ============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. .env is automatically ignored by git (.gitignore)
# 4. Never commit secrets or credentials to version control
# 5. Use different .env files for different environments
# 6. Validate your configuration before deployment
